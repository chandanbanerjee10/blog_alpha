<div id="page-content">
  <h1 class = "text-center mt-4">Articles listing page</h1>

  <div class="container">
    <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
        <div class="col-8 mt-6">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-weight-bold">
              By chandan
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success text-decoration-none"%></h5>
              <p class="card-text"><%= simple_format(article.description) %></p>
              <%# <a href="#" class="btn btn-outline-primary">View</a> %>
              <%= link_to "View", article_path(article), class: "btn btn-outline-primary"%>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-success"%>
              <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger"%>
            </div>
            <div class="card-footer text-muted">
              <small> Created <%= time_ago_in_words(article.created_at)%> ago, Edited <%= time_ago_in_words(article.updated_at)%> ago</small>
            </div>
          </div>
        </div>
    </div>
    <%end%>
  </div>
  <p>
    <%= link_to 'Create new article', new_article_path %>
  </p>

</div>